        <main class="main-container">
        
                    <div class="title"><h1 class="arimo-regular">PRODUCTS</h1></div>
        <div class="filter-bar">
    <!-- View icons -->
    <div class="view-icons">
      <button class="active">☰</button>
      <button>▦</button>
    </div>

    <!-- Showing range -->
    <div class="text-muted">Showing <%= page %> to <%= perPage %> of <%= pages %> items</div>

    <!-- Show dropdown -->
    <div class="filter-group">
      <label for="show-count">Show:</label>
      <select id="show-count">
        <option>10</option>
        <option>25</option>
        <option>50</option>
        <option>100</option>
      </select>
    </div>

    <!-- Sort dropdown -->
    <div class="filter-group">
      <label for="sort-by">Sort by:</label>
      <select id="sort-by">
        <option>Alphabetically, A-Z</option>
        <option>Alphabetically, Z-A</option>
        <option>Price, Low to High</option>
        <option>Price, High to Low</option>
        <option>Newest</option>
      </select>
    </div>
  </div>
            <% if (prods.length > 0) { %>
                <div class="grid">

                    <% for (let product of prods) { %>
                        <div class="grid-items">
                        <div class="product__title">
                                 
                                    <%= product.title %>
                                
                                </div>
                            <div class="card__image">
                                <a href="products/<%= product._id %>">
                                <img src="<%= product.imageUrl %>" alt="<%= product.title %>">

                                </a>
                                
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$
                                    <%= product.price %>
                                </h2>
                                
                            </div>
                            <!--<form action="/delete-product" method="POST">
                                <input type="hidden" value="<%= product._id %>" name="productId">
                                <button class="btn" type="button" >Delete</button>
                            </form>-->
                           <!-- <div class="card__actions">
                            <form action="/cart" method="post">
                                <input type="hidden" name="productId" value="<%= product._id %>">  
                                <button class="btn"  type="submit">Add to Cart</button>

                            </form>
                            </div>-->
                </div> 
                        <% } %>
                </div>
                <% } else { %>
                    <h1>No Products Found!</h1>
                    <% } %>
                    <!-- Pagination -->
  <div class="pages">
    <% if (page > 1) { %>
     <a href="/products?page=<%= page - 1 %>&perPage=<%= perPage %>">Previous</a>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
      <% if (i === page) { %>
        <span class="current"><%= i %></span>
      <% } else { %>
        <a href="/products?page=<%= i %>&perPage=<%= perPage %>"><%= i %></a>
      <% } %>
    <% } %>

    <% if (page < totalPages) { %>
      <a href="/products?page=<%= page + 1 %>&perPage=<%= perPage %>">Next</a>
    <% } %>
  </div>
                  

                    
