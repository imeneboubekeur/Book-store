<%- include('./head.ejs') %>
</head>
<body>

  
  <h1>Your Orders</h1>

  <% if (!orders) { %>
    <p class="no-orders">You have no orders yet.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Items</th>
          <th>Total</th>
          <th>Status</th>
          <th>Invoice</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order._id %></td>
            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
            <td>
              <ul>
                <% order.items.forEach(item => { %>
                  <li>
                    <%= item.book.title %> Ã— <%= item.quantity %>
                    ($<%= item.book.price %>)
                  </li>
                <% }) %>
              </ul>
            </td>
            
            <td><%= order.status %></td>
            <td>
              <a href="/order/<%= order._id.toString() %>/invoice" target="_blank" class="btn">View Invoice</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

